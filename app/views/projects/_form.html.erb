<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br />
    <%= f.date_select :start_date %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br />
    <%= f.date_select :end_date %>
  </div>

  Developers:
  <ul>
  <% @all_programmers.each do |prog| %>
     <li><%= check_box_tag "project[programmer_ids][]", prog.id, @project.programmers.include?(prog) %><%= prog.name %></li>
  <% end %>
  </ul>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
